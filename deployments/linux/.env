# ICS Cybersecurity Platform - Linux Debian Deployment Configuration

# Database Configuration
POSTGRES_PASSWORD=secure_password_123
DATABASE_URL=postgresql://ics_user:secure_password_123@localhost:5432/ics_security

# Redis Configuration
REDIS_PASSWORD=redis_password_123
REDIS_URL=redis://:redis_password_123@localhost:6379/0

# Application Security
SECRET_KEY=your-super-secret-key-change-in-production-linux
JWT_SECRET_KEY=jwt-secret-key-linux-deployment
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Application Configuration
ENVIRONMENT=production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Storage Paths (Linux)
PCAP_STORAGE_DIR=./data/pcap
ML_MODEL_DIR=./data/models
LOG_DIR=./logs

# Monitoring
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION=200h

# Frontend Configuration
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws

# Network Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
POSTGRES_PORT=5432
REDIS_PORT=6379

# Linux Specific Settings
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Security Settings
DOCKER_CONTENT_TRUST=1

# Resource Limits
POSTGRES_MAX_CONNECTIONS=100
REDIS_MAXMEMORY=512mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Logging Configuration
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3