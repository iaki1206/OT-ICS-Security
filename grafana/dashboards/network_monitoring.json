{
  "uid": "network-monitoring",
  "title": "Network Monitoring",
  "timezone": "browser",
  "panels": [
    {
      "type": "stat",
      "title": "API Request Rate",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
      "targets": [
        {"expr": "sum(rate(api_request_duration_seconds_count[5m]))", "legendFormat": "rps"}
